<div id="sidebar" class="background-color-blue hidden-tablet">
    <section class="user-data text-center margin-top-small margin-bottom-small">
        <span class="user-image background-color-white"></span>
        <a id="logout" class="btn btn-circle logout background-color-red" asp-area="" asp-controller="User" asp-action="Logout"></a>
        <p class="color-white text-center margin-top-xsmall">
            @ViewBag.User
        </p>
    </section>
    <section class="manage margin-top-small margin-bottom-small">
        <ul class="control-list margin-right-small margin-left-small">
            <li id="user" class="color-white padding-left-medium border-radius-small active">
                <a class="color-white" asp-area="" asp-controller="User" asp-action="Index">Utenti</a>
            </li>
            <li id="argument" class="color-white padding-left-medium border-radius-small">
                <a class="color-white" asp-area="" asp-controller="Argument" asp-action="Index">Argomenti</a>    
            </li>
            <li id="post" class="color-white padding-left-medium border-radius-small">Post</li>
            <li id="photo" class="color-white padding-left-medium border-radius-small">Foto</li>
            <li id="video" class="color-white padding-left-medium border-radius-small">Video</li>
        </ul>
    </section>
</div>